@model TravelDetroit.Presentation.ViewModels.UserProfileIndexViewModel

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_SearchUsersPartial", Model)

<h2>@Model.Name</h2>

@Html.Partial("_AddLocationToUserPartial", Model)

<table class="table">
    <tr>
        <th>Your Favorite Locations</th>
    </tr>
    @if (Model.Locations != null)
    {
        foreach (var location in Model.Locations)
        {
            <tr>
                <td>
                    <text>Name: </text>@location.Name
                    <br />
                    <text>Address: </text>@location.Address
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                <text>No locations found...</text>
            </td>
        </tr>
    }
</table>